<!-- src/VehicleTracking.Web/Views/Vehicle/Track.cshtml -->
@model VehicleTracking.Web.Models.Vehicle
@{
    ViewData["Title"] = $"Tracking - {Model.VehicleName}";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-crosshairs me-2"></i>Tracking: @Model.VehicleName</h5>
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-primary" onclick="centerOnVehicle()">
                        <i class="fas fa-crosshairs"></i> Center
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" onclick="toggleTracking()">
                        <i class="fas fa-play"></i> <span id="tracking-btn-text">Start</span>
                    </button>
                    <a asp-action="History" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-info">
                        <i class="fas fa-history"></i> History
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div id="tracking-map" style="height: 500px;"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">
                <h6><i class="fas fa-car me-2"></i>Vehicle Information</h6>
            </div>
            <div class="card-body">
                <div id="current-vehicle-info">
                    <h5>@Model.VehicleName</h5>
                    <p class="mb-1"><strong>Device ID:</strong> @Model.DeviceId</p>
                    <p class="mb-1"><strong>License:</strong> @(Model.LicensePlate ?? "Not set")</p>
                    <p class="mb-1"><strong>Driver:</strong> @(Model.DriverName ?? "Not assigned")</p>
                    <span class="badge bg-secondary">Offline</span>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h6><i class="fas fa-info-circle me-2"></i>Location Details</h6>
            </div>
            <div class="card-body">
                <div id="location-details">
                    <p class="text-muted">No location data available</p>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-history me-2"></i>Recent Locations</h6>
            </div>
            <div class="card-body">
                <div id="recent-locations" style="max-height: 300px; overflow-y: auto;">
                    <p class="text-muted">No recent locations</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const vehicleId = @Model.Id;
        const vehicleData = @Html.Raw(Json.Serialize(Model));

        document.addEventListener('DOMContentLoaded', function() {
            initializeVehicleTracking(vehicleId, vehicleData);
        });
    </script>
}