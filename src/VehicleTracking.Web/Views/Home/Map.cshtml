<!-- src/VehicleTracking.Web/Views/Home/Map.cshtml -->
@{
    ViewData["Title"] = "Live Map";
}

<div class="row">
    <div class="col-lg-9">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-map me-2"></i>Live Vehicle Tracking</h5>
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-primary" onclick="centerMap()">
                        <i class="fas fa-crosshairs"></i> Center
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" onclick="toggleAutoRefresh()">
                        <i class="fas fa-sync"></i> <span id="refresh-btn-text">Auto Refresh</span>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <div id="live-map" style="height: 600px;"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-list me-2"></i>Vehicles</h6>
            </div>
            <div class="card-body" id="map-vehicle-list">
                <!-- Vehicle list will be populated here -->
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-info-circle me-2"></i>Selected Vehicle</h6>
            </div>
            <div class="card-body">
                <div id="selected-vehicle-info">
                    <p class="text-muted">Click on a vehicle to see details</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initializeLiveMap();
        });
    </script>
}
